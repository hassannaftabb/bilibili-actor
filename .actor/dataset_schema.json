{
    "title": "Bilibili Dataset Schema",
    "description": "Defines the structure of data items output by the Bilibili Trend Crawler.",
    "type": "object",
    "properties": {
        "video_id": { "type": "string", "description": "Unique Bilibili video identifier (BVID)" },
        "url": { "type": "string", "description": "Direct link to the video" },
        "title": { "type": "string", "description": "Video title" },
        "description": { "type": "string", "description": "Video description" },
        "thumbnail": { "type": "string", "description": "Video thumbnail URL" },
        "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Video tags/categories"
        },
        "author": {
            "type": "object",
            "description": "Video author info",
            "properties": {
                "user_id": { "type": "integer" },
                "username": { "type": "string" }
            }
        },
        "content": {
            "type": "object",
            "description": "Content metadata",
            "properties": {
                "duration": { "type": "integer" },
                "publish_time": { "type": "integer" }
            }
        },
        "engagement": {
            "type": "object",
            "description": "Engagement metrics",
            "properties": {
                "views": { "type": "integer" },
                "likes": { "type": "integer" },
                "coins": { "type": "integer" },
                "favorites": { "type": "integer" },
                "shares": { "type": "integer" },
                "engagement_rate": { "type": "number" }
            }
        }
    },
    "required": ["video_id", "url", "title"]
}
