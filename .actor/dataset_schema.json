{
    "actorOutputSchemaVersion": 1,
    "actorSpecification": 1,
    "title": "Bilibili Dataset Schema",
    "description": "Defines the structure of data items output by the Bilibili Trend Crawler.",
    "type": "object",
    "properties": {
        "video_id": {
            "type": "string",
            "title": "Video ID",
            "description": "Unique Bilibili video identifier (BVID)",
            "template": "{{video_id}}"
        },
        "url": {
            "type": "string",
            "title": "Video URL",
            "description": "Direct link to the video",
            "template": "{{url}}"
        },
        "title": {
            "type": "string",
            "title": "Title",
            "description": "Video title",
            "template": "{{title}}"
        },
        "description": {
            "type": "string",
            "title": "Description",
            "description": "Video description",
            "template": "{{description}}"
        },
        "thumbnail": {
            "type": "string",
            "title": "Thumbnail",
            "description": "Video thumbnail URL",
            "template": "{{thumbnail}}"
        },
        "tags": {
            "type": "array",
            "title": "Tags",
            "description": "Video tags/categories",
            "items": {
                "type": "string",
                "template": "{{item}}"
            },
            "template": "{{tags}}"
        },
        "author": {
            "type": "object",
            "title": "Author",
            "description": "Video author info",
            "properties": {
                "user_id": {
                    "type": "integer",
                    "title": "User ID",
                    "template": "{{author.user_id}}"
                },
                "username": {
                    "type": "string",
                    "title": "Username",
                    "template": "{{author.username}}"
                }
            },
            "template": "{{author.username}}"
        },
        "content": {
            "type": "object",
            "title": "Content Metadata",
            "description": "Video content details",
            "properties": {
                "duration": {
                    "type": "integer",
                    "title": "Duration (seconds)",
                    "template": "{{content.duration}}"
                },
                "publish_time": {
                    "type": "integer",
                    "title": "Publish Time (Unix timestamp)",
                    "template": "{{content.publish_time}}"
                }
            },
            "template": "{{content.duration}}s"
        },
        "engagement": {
            "type": "object",
            "title": "Engagement",
            "description": "Engagement metrics (views, likes, etc.)",
            "properties": {
                "views": {
                    "type": "integer",
                    "title": "Views",
                    "template": "{{engagement.views}}"
                },
                "likes": {
                    "type": "integer",
                    "title": "Likes",
                    "template": "{{engagement.likes}}"
                },
                "coins": {
                    "type": "integer",
                    "title": "Coins",
                    "template": "{{engagement.coins}}"
                },
                "favorites": {
                    "type": "integer",
                    "title": "Favorites",
                    "template": "{{engagement.favorites}}"
                },
                "shares": {
                    "type": "integer",
                    "title": "Shares",
                    "template": "{{engagement.shares}}"
                },
                "engagement_rate": {
                    "type": "number",
                    "title": "Engagement Rate",
                    "template": "{{engagement.engagement_rate}}"
                }
            },
            "template": "{{engagement.views}} views"
        }
    },
    "required": ["video_id", "url", "title"]
}
