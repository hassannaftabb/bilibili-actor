{
    "actorOutputSchemaVersion": 1,
    "actorSpecification": 1,
    "title": "Bilibili Dataset Schema",
    "description": "Defines the structure of data items output by the Bilibili Trend Crawler.",
    "type": "object",
    "properties": {
        "video_id": {
            "type": "string",
            "title": "Video ID",
            "description": "Unique Bilibili video identifier (BVID)",
            "template": "{{video_id}}"
        },
        "url": {
            "type": "string",
            "title": "Video URL",
            "description": "Direct link to the video",
            "template": "{{url}}"
        },
        "title": {
            "type": "string",
            "title": "Title",
            "description": "Video title",
            "template": "{{title}}"
        },
        "description": {
            "type": "string",
            "title": "Description",
            "description": "Video description",
            "template": "{{description}}"
        },
        "thumbnail": {
            "type": "string",
            "title": "Thumbnail",
            "description": "Video thumbnail URL",
            "template": "{{thumbnail}}"
        },
        "tags": {
            "type": "string",
            "title": "Tags",
            "description": "Comma-separated tags/categories",
            "template": "{{tags}}"
        },
        "author": {
            "type": "string",
            "title": "Author",
            "description": "Author name and ID as text",
            "template": "{{author.username}} (ID: {{author.user_id}})"
        },
        "content": {
            "type": "string",
            "title": "Content Info",
            "description": "Duration and publish time (seconds, unix timestamp)",
            "template": "Duration: {{content.duration}}s, Published: {{content.publish_time}}"
        },
        "engagement": {
            "type": "string",
            "title": "Engagement Stats",
            "description": "Views, Likes, Coins, Favorites, Shares, Engagement Rate",
            "template": "Views: {{engagement.views}}, Likes: {{engagement.likes}}, Favorites: {{engagement.favorites}}, Shares: {{engagement.shares}}, Rate: {{engagement.engagement_rate}}"
        }
    },
    "required": ["video_id", "url", "title"]
}
