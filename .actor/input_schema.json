{
    "title": "Bilibili Scraper Input",
    "description": "Input parameters for the Bilibili scraping actor.",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "keywords": {
            "title": "Keywords",
            "type": "array",
            "description": "List of search keywords for Bilibili videos.",
            "editor": "select",
            "items": {
                "type": "string",
                "enum": ["原神", "英雄联盟", "TechReview", "Vlog"]
            },
            "prefill": ["原神"]
        },
        "maxResults": {
            "title": "Max Results",
            "type": "integer",
            "description": "Maximum number of results to fetch.",
            "editor": "number",
            "default": 5
        },
        "concurrency": {
            "title": "Concurrency",
            "type": "integer",
            "description": "Number of concurrent requests.",
            "editor": "number",
            "default": 3
        },
        "requestDelayMs": {
            "title": "Request Delay (ms)",
            "type": "integer",
            "description": "Delay between requests in milliseconds.",
            "editor": "number",
            "default": 400
        },
        "headless": {
            "title": "Headless Mode",
            "type": "boolean",
            "description": "Run browser in headless mode.",
            "editor": "checkbox",
            "default": true
        }
    },
    "required": ["keywords"],
    "additionalProperties": false
}
