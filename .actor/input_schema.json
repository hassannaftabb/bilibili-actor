{
    "title": "Bilibili Scraper Input",
    "description": "Input parameters for the Bilibili scraping actor.",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "search": {
            "title": "Search",
            "type": "string",
            "description": "Search query for Bilibili videos.",
            "editor": "textfield",
            "prefill": "原神"
        },
        "maxResults": {
            "title": "Max Results",
            "type": "integer",
            "description": "Maximum number of results to fetch.",
            "editor": "number",
            "default": 5
        },
        "concurrency": {
            "title": "Concurrency",
            "type": "integer",
            "description": "Number of concurrent requests.",
            "editor": "number",
            "default": 3
        },
        "requestDelayMs": {
            "title": "Request Delay (ms)",
            "type": "integer",
            "description": "Delay between requests in milliseconds.",
            "editor": "number",
            "default": 400
        },
        "headless": {
            "title": "Headless Mode",
            "type": "boolean",
            "description": "Run browser in headless mode.",
            "editor": "checkbox",
            "default": true
        }
    },
    "required": ["search"],
    "additionalProperties": false
}
